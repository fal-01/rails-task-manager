<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <input type="checkbox"><%= link_to task.title, task_path(task)%>
      -
      <%= link_to "Delete", tasks_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>

    </li>
  <% end %>
</ul>
<p><%= link_to "Add new task", tasks_new_path %></p>
